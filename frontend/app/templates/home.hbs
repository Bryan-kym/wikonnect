<div id="home">
  {{#if me.isAuthenticated}}

    <div class="heading bg-orange">
      <h2>Courses</h2>
      <p>Each module covers a broad area of knowledge divided into five related topics.</p>
    </div>

    <div class="padded">
      {{#if model.enrolledCourses}}



        {{#each model.enrolledCourses as |course_item|}}
          <CourseItem @course={{course_item}} @progress={{course_item.progress}} @title={{course_item.name}}
            @description={{course_item.description}} @points="5" @slug={{course_item.slug}}
            @color={{course_item.color}} />
        {{/each}}
      {{else}}
        You are not enrolled in any course.

        <br>
        {{#link-to "courses" class="btn padded btn-primary btn-small form-control" }}
          Explore Courses
        {{/link-to}}
      {{/if}}

    </div>
  {{else}}
    <br>

    <Warning @message="You do not have  permission to view this page" />

  {{/if}}
</div>